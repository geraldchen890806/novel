        {novel.tags.map(tag => <span class="tag tag-light">{tag}</span>)}
      </div>
    </div>

    <div class="chapter-list">
      <h2>üìë Á´†ËäÇÁõÆÂΩï</h2>
      {novel.chapters.map(ch => (
        <a href={`/novel/${slug}/${ch.filename}`} class="chapter-item">
          <span class="chapter-num">Á¨¨{ch.num}Á´†</span>
          <span class="chapter-title">{ch.title}</span>
          <span class="chapter-words">{ch.wordCount} Â≠ó</span>
