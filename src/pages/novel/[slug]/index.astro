---
import Base from '../../../layouts/Base.astro';
import { getAllNovels, getNovel } from '../../../data/novels.js';

export function getStaticPaths() {
  return getAllNovels().map(n => ({ params: { slug: n.slug } }));
}

const { slug } = Astro.params;
const novel = getNovel(slug);
if (!novel) return Astro.redirect('/');
---
