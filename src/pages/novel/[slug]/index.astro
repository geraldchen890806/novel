  <main class="container toc-page">
    <div class="novel-hero" style={`background: ${novel.gradient};`}>
      <div class="novel-emoji">{novel.emoji}</div>
      <h1>{novel.title}</h1>
      <p class="novel-desc">{novel.desc}</p>
      <div class="novel-stats">
        <span>üìñ {novel.totalWords} Â≠ó</span>
