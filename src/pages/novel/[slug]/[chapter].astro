import Base from '../../../layouts/Base.astro';
import { getAllNovels, getNovel } from '../../../data/novels.js';

export function getStaticPaths() {
  const paths = [];
  for (const novel of getAllNovels()) {
    for (const ch of novel.chapters) {
      paths.push({
        params: { slug: novel.slug, chapter: ch.filename },
      });
    }
  }
  return paths;
}

const { slug, chapter } = Astro.params;
const novel = getNovel(slug);
if (!novel) return Astro.redirect('/');

const chapterIndex = novel.chapters.findIndex(c => c.filename === chapter);
const currentChapter = novel.chapters[chapterIndex];
if (!currentChapter) return Astro.redirect(`/novel/${slug}/`);

const prevChapter = chapterIndex > 0 ? novel.chapters[chapterIndex - 1] : null;
const nextChapter = chapterIndex < novel.chapters.length - 1 ? novel.chapters[chapterIndex + 1] : null;
const { Content } = currentChapter;
