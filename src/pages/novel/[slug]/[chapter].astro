</style>

<script is:inline>
  // Reading progress bar
  function updateProgress() {
    const scrollTop = window.scrollY;
    const docHeight = document.documentElement.scrollHeight - window.innerHeight;
    const progress = docHeight > 0 ? (scrollTop / docHeight) * 100 : 0;
    document.getElementById('progressBar').style.width = progress + '%';
  }
  window.addEventListener('scroll', updateProgress);
  updateProgress();

  // Font size
  const content = document.getElementById('readingContent');
  const savedSize = localStorage.getItem('reader-font-size');
  if (savedSize) content.style.fontSize = savedSize + 'rem';

  const popup = document.getElementById('fontPopup');
  document.getElementById('fontSizeBtn').addEventListener('click', () => {
    popup.style.display = popup.style.display === 'none' ? 'flex' : 'none';
  });
  popup.querySelectorAll('button').forEach(btn => {
    btn.addEventListener('click', () => {
      const size = btn.dataset.size;
      content.style.fontSize = size + 'rem';
      localStorage.setItem('reader-font-size', size);
      popup.style.display = 'none';
    });
  });
  document.addEventListener('click', (e) => {
    if (!popup.contains(e.target) && e.target.id !== 'fontSizeBtn') {
      popup.style.display = 'none';
    }
  });
</script>
